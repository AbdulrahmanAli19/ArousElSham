<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/iv_meal_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/burger" />

    <com.like.LikeButton
        android:id="@+id/like_btn"
        app:icon_type="Heart"
        app:like_drawable="@drawable/heart_on"
        app:unlike_drawable="@drawable/heart_off"
        app:icon_size="10dp"
        app:liked="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_meal_image"
        app:layout_constraintTop_toTopOf="@+id/iv_meal_image" />

    <TextView
        android:id="@+id/txt_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_meal_image"
        app:layout_constraintStart_toStartOf="@+id/iv_meal_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_meal_image"
        tools:text="Burger" />

    <TextView
        android:id="@+id/txt_meal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_meal_name"
        app:layout_constraintStart_toStartOf="@+id/txt_meal_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_meal_name"
        tools:text="220.0 EGP" />
</androidx.constraintlayout.widget.ConstraintLayout>